@model HomeViewModel
@{
    ViewData["Title"] = "Accueil";
}

    <body id="homeBody">


        <div class="container">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block m-auto" src="@Model.RandomStarter.ImageUrl" alt="First slide">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>@Model.RandomStarter.Name</h5>
                            <p>@Model.RandomStarter.ShortDescription</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100 mh-100" src="@Model.RecentRecipe.ImageUrl" alt="Second slide">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>@Model.RecentRecipe.Name</h5>
                            <p>@Model.RecentRecipe.ShortDescription</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100 mh-100" src="@Model.RandomDessert.ImageUrl" alt="Third slide">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>@Model.RandomDessert.Name</h5>
                            <p>@Model.RandomDessert.ShortDescription</p>
                        </div>
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
   
        </div>
    </body>