@model KooBooKMVC.ViewModels.RecipeListViewModel
@{
    ViewData["Title"] = "Liste des recettes";
}

<h1>Liste des recettes</h1>


<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control"
                   asp-for="searchTerm" />

            <div class="input-group-btn search-panel">
                <select asp-for="searchFilter" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                    <option value="all">Tous</option>
                    <option value="ingredients">Ingrédients</option>
                    <option value="description">Description</option>
                </select>
            </div>

            <span class="input-group-btn">
                <button type="submit" class="btn btn-primary ml-1"><i class="fas fa-search"></i></button>
            </span>
        </div>
    </div>
</form>


<section>
    <div class="container">
        <div class="row">

            @foreach (var recipe in Model.Recipes)
{
            <div class="col-md-6 col-lg-4">

                <div class="card h-100">
                    <div class="embed-responsive embed-responsive-4by3">
                        <img class="card-img-top embed-responsive-item" src="@recipe.ImageUrl" alt="image @recipe.Name">
                    </div>
                        <div class="card-body">
                        <h5 class="card-title">@recipe.Name</h5>
                        <a class="stretched-link" asp-controller="Recipes"
                           asp-action="Detail"
                           asp-route-recipeId="@recipe.Id">
                        </a>
                    </div>
                </div>
            </div>
}
        </div>
    </div>
</section>


<div style="clear: both">
    <a class="btn btn-primary"
       asp-controller="Recipes"
       asp-action="Edit">
        <i class="btn badge-primary">Ajouter</i>
    </a>
</div>



@section scripts
{

}
