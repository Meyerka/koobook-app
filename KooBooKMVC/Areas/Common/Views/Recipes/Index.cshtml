@model KooBooKMVC.ViewModels.RecipeListViewModel
@{
    ViewData["Title"] = "Liste des recettes";
}

<h1>Liste des recettes</h1>

<body id="recipeBody">




    <form method="get">
        <div class="form-group">
            <div class="input-group">
                <input type="search" class="form-control"
                       asp-for="searchTerm" />

                <div class="input-group-btn search-panel">
                    <select asp-for="searchFilter" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                        <option value="all">Tous</option>
                        <option value="ingredients">Ingrédients</option>
                        <option value="description">Description</option>
                    </select>
                </div>

                <span class="input-group-btn">
                    <button type="submit" class="btn btn-primary ml-1"><i class="fas fa-search"></i></button>
                </span>
            </div>
        </div>
    </form>


    <div class="container">
        <div class="row">


            @foreach (var recipe in Model.Recipes)
{
            <div class="col-4">

                <div class="property-card mb-5">
                    <a asp-action="Detail" asp-route-recipeId="@recipe.Id">

                        @if(recipe.ImageUrl != null)
                        {                        
                        <div class="property-image" style="background-image: url(@recipe.ImageUrl.Replace("\\","/"));">
                            <div class="property-image-title">
                            </div>
                        </div>
                        }
                        else 
                        {
                        <div class="property-image" style="background-image: url(/images/common/recipes/empty-plate.jpg);">
                            <div class="property-image-title">>
                            </div>
                        </div>
                        }

                    </a>
                    <div class="property-description">
                        <h5> @recipe.Name </h5>
                        <p>@recipe.ShortDescription</p>
                    </div>
                    <a href="#">
                        <div class="property-social-icons">
                        </div>
                    </a>
                </div>
            </div>
                }
        </div>

    </div>


    <div class="mt-5">
        <a class="btn btn-primary"
           asp-controller="Recipes"
           asp-action="Edit">
            <i class="btn badge-primary">Ajouter</i>
        </a>
    </div>

</body>

@section scripts
{

}
