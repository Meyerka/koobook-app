@model RecipeViewModel


<div class="col">
    <div class="card shadow">
        <div class="card-header border-0">
            <h3 class="mb-0">Valeurs nutritionnelles</h3>
        </div>
        <div class="table-responsive">
            <table class="table align-items-center table-flush">

                <tbody>
                    <tr>
                        <th scope="row">
                            <div class="media align-items-center">
                                <a href="#" class="avatar rounded-circle mr-3">
                                    <i class="fas fa-fire-alt"></i>
                                </a>
                                <div class="media-body">
                                    <span class="mb-0 text-sm">Calories</span>
                                </div>
                            </div>
                        </th>
                        <td>
                            @Model.Recipe.GetTotalNutrient("calories")
                        </td>
                        <td>
                            <div class="d-flex align-items-center">
                                <span class="mr-2">60%</span>
                                <div>
                                    <div class="progress">
                                        <div class="progress-bar bg-warning" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;"></div>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>

                    <tr>
                        <th scope="row">
                            <div class="media align-items-center">
                                <a href="#" class="avatar rounded-circle mr-3">
                                    <i class="fas fa-drumstick-bite"></i>
                                </a>
                                <div class="media-body">
                                    <span class="mb-0 text-sm">Protéines</span>
                                </div>
                            </div>
                        </th>
                        <td>
                            @Model.ProteinRatio
                        </td>
                        <td>
                            <div class="d-flex align-items-center">
                                <span class="mr-2">60%</span>
                                <div>
                                    <div class="progress">
                                        <div class="progress-bar bg-warning" role="progressbar" aria-valuenow="@Model.ProteinRatio" aria-valuemin="0" aria-valuemax="100" style="width: @Model.ProteinRatio%;"></div>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>

                    <tr>
                        <th scope="row">
                            <div class="media align-items-center">
                                <a href="#" class="avatar rounded-circle mr-3">
                                    <i class="fas fa-oil-can"></i>
                                </a>
                                <div class="media-body">
                                    <span class="mb-0 text-sm">Matière grasse</span>
                                </div>
                            </div>
                        </th>
                        <td>
                            @Model.FatRatio
                        </td>
                        <td>
                            <div class="d-flex align-items-center">
                                <span class="mr-2">20%</span>
                                <div>
                                    <div class="progress">
                                        <div class="progress-bar bg-warning" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 20%;"></div>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>

                    <tr>
                        <th scope="row">
                            <div class="media align-items-center">
                                <a href="#" class="avatar rounded-circle mr-3">
                                    <i class="fas fa-candy-cane"></i>
                                </a>
                                <div class="media-body">
                                    <span class="mb-0 text-sm">Glucides</span>
                                </div>
                            </div>
                        </th>
                        <td>
                            @Model.CarbRatio
                        </td>
                        <td>
                            <div class="d-flex align-items-center">
                                <span class="mr-2">20%</span>
                                <div>
                                    <div class="progress">
                                        <div class="progress-bar bg-warning" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 20%;"></div>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>

                </tbody>
            </table>
        </div>

    </div>
</div>
